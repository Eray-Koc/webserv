server {
    listen 8080;
    host 127.83.3.1;
    server_name example.com www.example.com;
    client_max_body_size 10M;
    error_page 404 /404.html;
    error_page 500 /500.html;
    location / {
        root /tmp/www;
        methods GET POST;
        autoindex on;
        index index.html;
    }
    location /redirect {
        redirect http://example.com/newpage;
    }
    location /cgi-bin {
        root /var/www/cgi;
        methods GET POST;
        cgi_extension .php;
        cgi_path /usr/bin/php-cgi;
    }
    location /upload {
        root /tmp/uploads;
        methods POST;
        upload_limit 5M;
    }
}